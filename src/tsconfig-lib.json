{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "../dist/out-tsc",
		"rootDir": "./",
		"sourceMap": true,
		"declaration": true,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"module": "esnext",
		"moduleResolution": "node",
		"importHelpers": true,
		"inlineSources": true,
		"target": "es5",
		"types": [],
		"lib": [ "dom", "es2018" ]
	},
	"angularCompilerOptions": {
		"enableIvy": false,
		"enableResourceInlining": true,
		"fullTemplateTypeCheck": true,
		"skipTemplateCodegen": true,
		"strictInjectionParameters": true,
		"strictMetadataEmit": true
	},
	"exclude": [
		"./test.ts",
		"**/*.spec.ts"
	],
	"files": [
		"./index.ts"
	]
}
