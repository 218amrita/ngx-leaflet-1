{
	"compilerOptions": {
		"target": "es5",

		"module": "es6",
		"moduleResolution": "node",

		"declaration": false,
		"noEmitHelpers": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,

		"lib": [ "es6", "dom" ],

		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowUnreachableCode": false,

		"sourceMap": true
	},

	"files": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
